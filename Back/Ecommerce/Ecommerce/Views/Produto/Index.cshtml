@model IEnumerable<Ecommerce.Models.Produto>

@{
    ViewBag.Title = "Produtos";
}

<h2>Produtos</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Valor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estoque)
        </th>
        <th></th>
    </tr>


    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Valor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estoque)
            </td>
            <td>
                @if (item.Estoque != 0)
                {
                    @Html.ActionLink("Adicionar ao carrinho", "AdicionarAoCarrinho", new { id = item.Id }, new { id = "addCarrinho", @class = "addCarrinho" })
                }
                else
                {
                    @Html.Label("Produto indisponível");
                }
            </td>
        </tr>
    }

</table>
<p></p>
<b style="color:red;">@Html.ValidationSummary(true)</b>
<p></p>
<p>Itens no carrinho: @ViewBag.itensCarrinho</p>
@Html.ActionLink("Ver carrinho", "verCarrinho")
